<!DOCTYPE html>
<html lang="en" ng-app="RevolverBrewing">
    <head>
        <meta charset="utf-8" />
        <title>Revolver Brewing - @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css/fonts.css")
        @Styles.Render("~/Content/css/font-awesome.min.css")
        @Styles.Render("~/Content/css/font-awesome-ie7.min.css")
        @Styles.Render("~/Content/css/bootstrap.min.css")
        @Styles.Render("~/Content/css/bootstrap-responsive.min.css")
        @Styles.Render("~/Content/css/common.css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <section id="wrapper" class="container-fluid">
            <header class="row-fluid" id="topNav">
                <h1 class="span12"><a href="/"><img src="~/Content/img/common/logoRevolver.png" alt="Revolver Brewing" /></a></h1>
                <nav class="row-fluid">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <ul id="menu">
                        <li>@Html.ActionLink("Our History", "About", "Home")</li>
                        <li>@Html.ActionLink("Our Beers", "Index", "Beers")</li>
                        <li>@Html.ActionLink("Tour Info", "Index", "TourInfo")</li>
                        <!--<li>@Html.ActionLink("Store", "Index", "Store")</li>-->
                        <li>@Html.ActionLink("About Us", "Contact", "Home")</li>
                    </ul>
                </nav>
            </header>
            <div id="body" class="container-fluid">
                <section class="mainContent">
                    @RenderBody()
                </section>
            </div>
            <footer>
                <div class="content-wrapper">
                    <div class="float-left">
                        <ul>
                            <li><a href="https://www.facebook.com/REVOLVERBREWING" target="_blank"><i class="icon-facebook-sign"></i></a></li>
                            <li><a href="https://twitter.com/RevolverBrewing" target="_blank"><i class="icon-twitter-sign"></i></a></li>
                            <li><a href="mailto:rhett.keisler@revolverbrewing.com" target="_blank"><i class="icon-envelope-alt"></i></a></li>
                        </ul>
                        <p>&copy; @DateTime.Now.Year - Revolver Brewing</p>
                    </div>
                </div>
            </footer>
        </section>
        <script type="text/javascript">
            var baseUri = '@ViewBag.ApiUrl';
        </script>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/Scripts/bootstrap.min.js")
        @Scripts.Render("~/Scripts/Angular/angular.min.js")
        @Scripts.Render("~/Scripts/Angular/angular-resource.min.js")
        @Scripts.Render("~/Scripts/Angular/angular-sanitize.min.js")
        @Scripts.Render("~/Scripts/Angular/angular-cookies.min.js")
        @Scripts.Render("~/Scripts/Store/app.js")
        @Scripts.Render("~/Scripts/Store/controllers.js")
        @Scripts.Render("~/Scripts/Store/directives.js")
        @Scripts.Render("~/Scripts/Store/filters.js")
        @Scripts.Render("~/Scripts/Store/services.js")
        @Scripts.Render("~/Scripts/Store/common.js")
        @RenderSection("scripts", required: false)
    </body>
</html>
